
[nginx-req-limit]
enabled = true
filter = nginx-req-limit
action = iptables-multiport[name=ReqLimit, port="http,https", protocol=tcp]
logpath = /var/log/nginx/*error.log
findtime = 600
bantime = 7200
maxretry = 30

[ban-urls]
enabled = true
filter = ban-urls
action = iptables-multiport[name=BanUrls, port="http,https"]
logpath = /var/log/nginx/*error.log
maxretry = 1
bantime = 60
